{
  "name": "personal-site-starter",
  "version": "1.0.0",
  "description": "A statically generated personal site using Next.js, Markdown, and TypeScript",
  "scripts": {
    "dev": "next",
    "prebuild": "npm install",
    "build": "next build",
    "prod": "next export",
    "start": "next start",
    "static": "npx http-server ./out --port 3000",
    "typecheck": "tsc",
    "lint": "npx eslint -c .eslintrc.json --ext .ts,.tsx ./src",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "npx prettier src --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "eslint-plugin-simple-import-sort": "^9.0.0",
    "gray-matter": "^4.0.3",
    "next": "^13.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "next-share": "^0.19.0",
    "remark": "^14.0.2",
    "remark-html": "^15.0.1",
    "styled-jsx-plugin-postcss": "^4.0.1",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/node": "^18.0.3",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "autoprefixer": "^10.4.7",
    "cssnano": "^5.1.14",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.1",
    "postcss": "^8.4.14",
    "prettier": "^2.8.2",
    "tailwindcss": "^3.1.4"
  },
  "bugs": {
    "url": "https://github.com/jorshali/personal-site-starter/issues"
  },
  "homepage": "https://github.com/jorshali/personal-site-starter"
}
